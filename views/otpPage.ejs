<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OtpPage</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      body {
        background: url("./img/photo-1499363536502-87642509e31b.jpg") no-repeat
          center center fixed;
        background-size: cover;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }

      .otp-card {
        background: linear-gradient(135deg, #262265, #bfbcde);
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0.75rem 2rem rgba(0, 0, 0, 0.3);
        width: 100%;
        max-width: 400px;
      }
    </style>
  </head>

  <body>
    <div class="otp-card">
      <%- include("./layouts/flash") %>
      <h3 class="text-center mb-4">OTP Verification</h3>

      <form action="/verifyOtp" method="POST">
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="you@example.com"
            required
          />
        </div>

        <div class="mb-3">
          <label for="otp" class="form-label">Enter OTP</label>
          <input
            type="text"
            class="form-control"
            id="otp"
            name="otp"
            placeholder="4-digit OTP"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary w-100">Verify OTP</button>

        <!-- <div class="mt-3 text-center">
          Didn't get OTP? <a href="/resend-otp">Resend</a>
        </div> -->
      </form>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
